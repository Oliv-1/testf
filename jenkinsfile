pipeline {
	agent any
	parameters {
	
	string(name: 'NOM', defaultValue: 'NOM', description: 'affiche mon nom')
	
	text(name: 'PRESENTATION', defaultValue: 'presentation', description: 'presentez-vous')
	
	booleanParam(name: 'CASE', defaultValue: true, description: 'oui ou non')
	
	choice(name: 'CHOICE', choices: ['dev', 'recette', 'preprod', 'prod'], description: '')
	
	password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'secret password')
	
	}
	
	options {
		buildDiscarder(logRotator(numToKeepStr: '5'))
		disableConcurrentBuilds()
		retry(3)
	}

	stages {
		stage('build') {
		options {
			timestamps(2)
		}
			steps{
				echo "NOM: $NOM"
				echo "PRESENTATION: $PRESENTATION"
				echo "CASE: $CASE"
				echo "CHOICE: $CHOICE"
				echo "PASSWORD: $PASSWORD"
			}
		}
	}
}